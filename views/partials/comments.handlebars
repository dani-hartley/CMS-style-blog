  </div>
  <div class="comments-text">
    {{#each this}}
    <section class="comment-list">
        <div class="comment-user">
          {{user.username}} on {{format_date created_at}} said {{comment_text}}
      </div>
      {{!-- <div class="text">
        {{comment_text}}
      </div> --}}
    </section>
    {{/each}}
    </ul>
  </div>
</section>