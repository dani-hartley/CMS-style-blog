<section >
    <div>
        <div class="create-post">
            <h2>Create New Post</h2>
            <form class = "new-post-form">
                <div>
                    <input type="text" id="new-post-title" name="new-post-title" placeholder="Title" />
                </div>
                <div>
                    <textarea id="new-post-body" name="new-post-body" placeholder="Content"></textarea>
                </div>
                <button type="submit" class="btn">Publish</button>
            </form>
        </div>
    </div>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="btn">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>